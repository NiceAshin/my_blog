// 极客风自定义 CSS
body
  font-family: "JetBrains Mono", "Fira Code", "Consolas", "Monospace", sans-serif !important

// 导航栏磨砂玻璃感
.navbar
  background-color: rgba(255, 255, 255, 0.8) !important
  backdrop-filter: blur(10px)

// 卡片阴影与圆角（针对 reco 主题）
.reco-card
  border-radius: 12px !important
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.05) !important
  transition: transform 0.3s ease !important
  &:hover
    transform: translateY(-5px) !important
    box-shadow: 0 8px 30px 0 rgba(0, 0, 0, 0.1) !important

// 首页 hero 动画（如有）
.hero
  h1
    text-shadow: 0 0 10px rgba(62, 175, 124, 0.3)
  p.tagline
    font-family: "Consolas", monospace
    letter-spacing: 0.1em
